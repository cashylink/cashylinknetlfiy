<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # اسمح بتمرير الملفات/المجلدات الموجودة كما هي
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # لا تقم بإعادة كتابة طلبات الأصول والملفات الثابتة
  RewriteCond %{REQUEST_URI} !^/assets/
  RewriteCond %{REQUEST_URI} !^/favicon\.ico$
  RewriteCond %{REQUEST_URI} !^/robots\.txt$
  RewriteCond %{REQUEST_URI} !\.(css|js|map|png|jpg|jpeg|gif|svg|webp|ico)$ [NC]

  # أعد توجيه باقي المسارات إلى index.html (SPA)
  RewriteRule ^ index.html [L]
</IfModule>
